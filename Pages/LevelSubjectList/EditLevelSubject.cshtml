@page
@model SchoolMaris.Pages.LevelSubjectList.EditLevelSubjectModel

<br />
<h2 class="text-info">Update new LevelSubject</h2>
<br />

 <div asp-validation-summary="All" class="text-danger"></div>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
         <div class="form-group row">
            <div class="col-4">
                <label asp-for="LevelSubject_.Level"></label>
            </div>
            <div class="col-6">
                    @Html.DropDownListFor(x => Model.LevelSubject_.LevelID, new SelectList(Model.LevelSubject_.LevelLists, "Value", "Text"),
                  htmlAttributes: new { @class = "form-control", @id = "Region" })
            </div>
            <span asp-validation-for="LevelSubject_.LevelID" class="text-danger"></span>
        </div>
         <div class="form-group row">
            <div class="col-4">
                <label asp-for="LevelSubject_.Subject"></label>
            </div>
            <div class="col-6">
                  @Html.DropDownListFor(x => Model.LevelSubject_.SubjectID, new SelectList(Model.LevelSubject_.SubjectLists, "Value", "Text"),
                  htmlAttributes: new { @class = "form-control", @id = "Region" })
            </div>
            <span asp-validation-for="LevelSubject_.SubjectID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input id="savebtn" type="submit"  value="Update" class="btn btn-primary form-control" >
            </div>
            <div class="col-3">
                <a asp-page="LevelSubjectIndex" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
