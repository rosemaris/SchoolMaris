@page
@model SchoolMaris.Pages.QUIZ.QuestionEditModel


<br />
<h2 class="text-info">Update Question</h2>
<br />

<div asp-validation-summary="All" class="text-danger"></div>

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="QuizQuestion_.QQuestionID" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="QuizQuestion_.Question"></label>
            </div>
            <div class="col-6">
                <input asp-for="QuizQuestion_.Question" class="form-control" />
            </div>
            <span asp-validation-for="QuizQuestion_.Question" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input id="savebtn" type="submit" value="Update" class="btn btn-primary form-control">
            </div>
            <div class="col-3">
                <a asp-page="QuestionIndex" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
