@page
@model SchoolMaris.Pages.Account.CreateCredentialModel
@{
}
<br />
<h2 class="text-info">Create Credential Details</h2>
<br />
<div asp-validation-summary="All" class="text-danger"></div>
<div class="container border" style="padding:22px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credentials_.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credentials_.UserName" class="form-control" />
            </div>
            <span asp-validation-for="Credentials_.UserName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credentials_.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credentials_.Password" class="form-control" />
            </div>
            <span asp-validation-for="Credentials_.Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input id="savebtn" type="submit" value="Save" class="btn btn-primary form-control">
            </div>

        </div>
    </form>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}