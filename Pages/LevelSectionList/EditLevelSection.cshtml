@page
@model SchoolMaris.Pages.LevelSectionList.EditLevelSectionModel


<br />
<h2 class="text-info">Update LevelSection</h2>
<br />

<div asp-validation-summary="All" class="text-danger"></div>

<div class="border container" style="padding:30px;">
    <form method="post">

        <input type="hidden" asp-for="LevelSection_.LevelSectionID" />

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="LevelSection_.Level"></label>
            </div>
            <div class="col-6">
                @Html.DropDownListFor(x => Model.LevelSection_.LevelID, new SelectList(Model.LevelSection_.LevelLists, "Value", "Text"),
                htmlAttributes: new { @class = "form-control", @id = "Region" })
            </div>
            <span asp-validation-for="LevelSection_.LevelID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="LevelSection_.Section"></label>
            </div>
            <div class="col-6">
                @Html.DropDownListFor(x => Model.LevelSection_.SectionID, new SelectList(Model.LevelSection_.SectionLists, "Value", "Text"),
                htmlAttributes: new { @class = "form-control", @id = "Region" })
            </div>
            <span asp-validation-for="LevelSection_.SectionID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input id="savebtn" type="submit" value="Update" class="btn btn-primary form-control">
            </div>
            <div class="col-3">
                <a asp-page="LevelSectionIndex" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}

