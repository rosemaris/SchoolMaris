@page
@model SchoolMaris.Pages.LevelSectionTeacherList.EditLevelSectionTeacherModel


<br />
<h2 class="text-info">Update Teaching Advisory</h2>
<br />

<div asp-validation-summary="All" class="text-danger"></div>


<div class="border container" style="padding:30px;">
    <form method="post">

        <input type="hidden" asp-for="LevelSectionTeacher_.LevelSectionTeacherID" />

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="LevelSectionTeacher_.LevelSection"></label>
            </div>
            <div class="col-6">
                @Html.DropDownListFor(x => Model.LevelSectionTeacher_.LevelSectionID, new SelectList(Model.LevelSectionTeacher_.LevelSectionLists, "Value", "Text"),
                htmlAttributes: new { @class = "form-control", @id = "Region" })
            </div>

            <span asp-validation-for="LevelSectionTeacher_.LevelSectionID" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-4">
                <label asp-for="LevelSectionTeacher_.Teacher"></label>
            </div>
            <div class="col-6">
                @Html.DropDownListFor(x => Model.LevelSectionTeacher_.TeacherID, new SelectList(Model.LevelSectionTeacher_.TeacherLists, "Value", "Text"),
                htmlAttributes: new { @class = "form-control", @id = "Region" })
            </div>
            <span asp-validation-for="LevelSectionTeacher_.TeacherID" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input id="savebtn" type="submit" value="Update" class="btn btn-primary form-control">
            </div>
            <div class="col-3">
                <a asp-page="LevelSectionTeacherIndex" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}

