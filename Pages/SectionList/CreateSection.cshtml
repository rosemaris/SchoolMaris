@page
@model SchoolMaris.Pages.SectionList.CreateSectionModel

<br />
<h2 class="text-info">Add new Section</h2>
<br />

<div asp-validation-summary="All" class="text-danger"></div>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Section_.Code"></label>
            </div>
            <div class="col-6">
                <input asp-for="Section_.Code" class="form-control" />
            </div>
            <span asp-validation-for="Section_.Code" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Section_.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Section_.Description" class="form-control" />
            </div>
            <span asp-validation-for="Section_.Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input id="savebtn" type="submit" value="Save" class="btn btn-primary form-control">
            </div>
            <div class="col-3">
                <a asp-page="SectionIndex" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />
}

