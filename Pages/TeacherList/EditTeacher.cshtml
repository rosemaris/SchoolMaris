@page
@model SchoolMaris.Pages.TeacherList.EditTeacherModel



<br />
<h2 class="text-info">Update  Teacher</h2>
<br />

 <div asp-validation-summary="All" class="text-danger"></div>

<div class="border container" style="padding:30px;">
    <form method="post">

           <input type="hidden" asp-for="Teacher_.TeacherID" />

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
         
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Teacher_.FirstName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Teacher_.FirstName" class="form-control" />
            </div>
            <span asp-validation-for="Teacher_.FirstName" class="text-danger"></span>
        </div>

         <div class="form-group row">
            <div class="col-4">
                <label asp-for="Teacher_.LastName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Teacher_.LastName" class="form-control" />
            </div>
            <span asp-validation-for="Teacher_.LastName" class="text-danger"></span>
        </div>

        
         <div class="form-group row">
            <div class="col-4">
                <label asp-for="Teacher_.DateOfBirth"></label>
            </div>
            <div class="col-6">
                <input asp-for="Teacher_.DateOfBirth" class="form-control" />
            </div>
            <span asp-validation-for="Teacher_.DateOfBirth" class="text-danger"></span>
        </div>

        
         <div class="form-group row">
            <div class="col-4">
                <label asp-for="Teacher_.Age"></label>
            </div>
            <div class="col-6">
                <input asp-for="Teacher_.Age" class="form-control" />
            </div>
            <span asp-validation-for="Teacher_.Age" class="text-danger"></span>
        </div>

        
         <div class="form-group row">
            <div class="col-4">
                <label asp-for="Teacher_.Gender"></label>
            </div>
            <div class="col-6">
                <input asp-for="Teacher_.Gender" class="form-control" />
            </div>
            <span asp-validation-for="Teacher_.Gender" class="text-danger"></span>
        </div>

        
         <div class="form-group row">
            <div class="col-4">
                <label asp-for="Teacher_.Address"></label>
            </div>
            <div class="col-6">
                <input asp-for="Teacher_.Address" class="form-control" />
            </div>
            <span asp-validation-for="Teacher_.Address" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-3 offset-4">
                <input id="savebtn" type="submit"  value="Update" class="btn btn-primary form-control" >
            </div>
            <div class="col-3">
                <a asp-page="TeacherIndex" class="btn btn-success form-control">Back to List</a>
            </div>

        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

